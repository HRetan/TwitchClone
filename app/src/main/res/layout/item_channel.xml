<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_background">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView" android:layout_gravity="top"
            android:layout_margin="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    app:srcCompat="@mipmap/ic_launcher" android:id="@+id/image_logo"
                    android:layout_width="40dp" android:layout_height="40dp" android:padding="5dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/text_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center_vertical"
                    android:maxLines="1" android:ellipsize="end" android:textColor="#ffffff" android:paddingLeft="5dp"/>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_status" android:maxLines="1"
                android:ellipsize="end" android:textColor="#999999"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_game" android:ellipsize="end"
                android:maxLines="1" android:textColor="#888888"/>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>