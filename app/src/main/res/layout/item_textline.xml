<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLine">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" android:id="@+id/text_line"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="14sp"
            android:gravity="center_vertical" android:layout_marginLeft="10dp" android:textStyle="bold"
            android:textColor="#ffffff" android:layout_marginRight="10dp"/>
</android.support.v7.widget.LinearLayoutCompat>